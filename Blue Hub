local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "ðŸ”µ Blue Hub ðŸ”µ",
   Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
   LoadingTitle = "ðŸ”µ Blue Hub ðŸ”µ",
   LoadingSubtitle = "by BCS",
   ShowText = "BLUEHUB", -- for mobile users to unhide rayfield, change if you'd like
   Theme = "AmberGlow", -- Check https://docs.sirius.menu/rayfield/configuration/themes

   ToggleUIKeybind = "K", -- The keybind to toggle the UI visibility (string like "K" or Enum.KeyCode)

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false, -- Prevents Rayfield from warning when the script has a version mismatch with the interface

   ConfigurationSaving = {
      Enabled = false,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "Blue Hub"
   },

   Discord = {
      Enabled = false, -- Prompt the user to join your Discord server if their executor supports it
      Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },

   KeySystem = true, -- Set this to true to use our key system
   KeySettings = {
      Title = "Blue Hub | Key System",
      Subtitle = "Use LuaArmor",
      Note = "NO METHOD USE Hello", -- Use this to tell the user how to get a key
      FileName = "Key", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
      SaveKey = false, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = {"Hello"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
   }
})

local MainTab = Window:CreateTab("Universal", nil) -- Title, Image
local GamesTab = Window:CreateTab("Games", nil) -- Title, Image
local MainSection = MainTab:CreateSection("Universal")

Rayfield:Notify({
   Title = "Blue Hub has successfully executed",
   Content = "Pick a game or use universal scripts.",
   Duration = 5,
   Image = "bell",
})

local Button = MainTab:CreateButton({
   Name = "Nameless Admin",
   Callback = function()
   loadstring(game:HttpGet("https://raw.githubusercontent.com/ltseverydayyou/Nameless-Admin/main/Source.lua"))()
   end,
})

local Slider = MainTab:CreateSlider({
   Name = "Walkspeed Modifier",
   Range = {0, 300},
   Increment = 1,
   Suffix = "Speed",
   CurrentValue = 16,
   Flag = "Slider1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = (Value)
   end,
})

local Slider = MainTab:CreateSlider({
   Name = "Jump Power Modifier",
   Range = {0, 300},
   Increment = 1,
   Suffix = "Speed",
   CurrentValue = 50,
   Flag = "Slider2", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = (Value)
   end,
})

local Toggle = MainTab:CreateToggle({
   Name = "ESP (Broken currently does not toggle)",
   CurrentValue = false,
   Flag = "Toggle1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Value)
        -- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- Tables to store drawings & highlights
local ESPObjects = {}
local Highlights = {}
local RenderConnection
local PlayerConnections = {}

-- Function to add ESP & Chams to a single player
local function addESP(player)
    if player == LocalPlayer then return end
    local char = player.Character
    if not char or not char:FindFirstChild("HumanoidRootPart") then return end

    -- Chams
    if not Highlights[player] then
        local highlight = Instance.new("Highlight")
        highlight.Name = player.Name .. "_Chams"
        highlight.FillColor = Color3.fromRGB(0, 0, 255)
        highlight.FillTransparency = 0.25
        highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
        highlight.Adornee = char
        highlight.Parent = workspace
        Highlights[player] = highlight
    end

    -- 2D ESP
    if not ESPObjects[player] then
        local box = Drawing.new("Square")
        box.Color = Color3.fromRGB(255, 0, 0)
        box.Thickness = 2
        box.Filled = false
        box.Transparency = 1
        box.ZIndex = 2

        local nameTag = Drawing.new("Text")
        nameTag.Text = player.Name
        nameTag.Color = Color3.fromRGB(255, 255, 255)
        nameTag.Size = 16
        nameTag.Center = true
        nameTag.Outline = true
        nameTag.ZIndex = 2

        local line = Drawing.new("Line")
        line.Color = Color3.fromRGB(0, 255, 0)
        line.Thickness = 2
        line.ZIndex = 2

        ESPObjects[player] = {Box = box, NameTag = nameTag, Line = line}
    end
end

-- Function to remove ESP & Chams from a player
local function removeESP(player)
    if ESPObjects[player] then
        local obj = ESPObjects[player]
        if obj.Box then obj.Box:Remove() end
        if obj.NameTag then obj.NameTag:Remove() end
        if obj.Line then obj.Line:Remove() end
        ESPObjects[player] = nil
    end
    if Highlights[player] then
        Highlights[player]:Destroy()
        Highlights[player] = nil
    end
end

-- Main toggle
if Value then
    -- Add ESP for all current players
    for _, player in pairs(Players:GetPlayers()) do
        addESP(player)
    end

    -- Connect for new players
    PlayerConnections.PlayerAdded = Players.PlayerAdded:Connect(addESP)
    PlayerConnections.PlayerRemoving = Players.PlayerRemoving:Connect(removeESP)

    -- Connect for character respawns
    for _, player in pairs(Players:GetPlayers()) do
        PlayerConnections[player] = player.CharacterAdded:Connect(function()
            removeESP(player) -- clean old ESP if any
            addESP(player)
        end)
    end

    -- Update ESP every frame
    RenderConnection = RunService.RenderStepped:Connect(function()
        for player, drawings in pairs(ESPObjects) do
            local char = player.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                local rootPos = workspace.CurrentCamera:WorldToViewportPoint(char.HumanoidRootPart.Position)
                local x, y = rootPos.X, rootPos.Y
                local size = 40

                drawings.Box.Position = Vector2.new(x - size/2, y - size/2)
                drawings.Box.Size = Vector2.new(size, size)
                drawings.Box.Visible = true

                drawings.NameTag.Position = Vector2.new(x, y - size/2 - 10)
                drawings.NameTag.Visible = true

                drawings.Line.From = Vector2.new(workspace.CurrentCamera.ViewportSize.X/2, workspace.CurrentCamera.ViewportSize.Y)
                drawings.Line.To = Vector2.new(x, y)
                drawings.Line.Visible = true
            else
                drawings.Box.Visible = false
                drawings.NameTag.Visible = false
                drawings.Line.Visible = false
            end
        end
    end)
else
    -- Disconnect & cleanup everything immediately
    if RenderConnection then
        RenderConnection:Disconnect()
        RenderConnection = nil
    end

    for _, conn in pairs(PlayerConnections) do
        if conn then conn:Disconnect() end
    end
    PlayerConnections = {}

    for player in pairs(ESPObjects) do
        removeESP(player)
    end
end
   end,
})

local Button = GamesTab:CreateButton({
   Name = "99 Nights in the Forest",
   Callback = function()
   loadstring(game:HttpGet("https://raw.githubusercontent.com/H4xScripts/Loader/refs/heads/main/loader2.lua", true))()
   end,
})

